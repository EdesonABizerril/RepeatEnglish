<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.repeatenglish.edesonabizerril.repeatenglish.MainActivity">

    <TextView
        android:id="@+id/tvDicaID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:paddingLeft="20dp"
        android:text="Controle de repetições do Inglês"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="16dp"/>

    <ImageButton
        android:id="@+id/btInfoID"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/info"
        tools:layout_editor_absoluteX="319dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/tvDicaID"
        android:layout_toRightOf="@+id/btContadorID"
        android:layout_toEndOf="@+id/btContadorID"/>

    <TextView
        android:id="@+id/tvContID"
        android:layout_width="151dp"
        android:layout_height="119dp"
        android:layout_below="@+id/tvStatusID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:foregroundGravity="center_vertical|center"
        android:gravity="center_vertical|center_horizontal"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="110sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="151dp"/>

    <TextView
        android:id="@+id/tvStatusID"
        android:layout_width="285dp"
        android:layout_height="26dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Inicie a revisão!"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="66dp"
        android:layout_below="@+id/btInfoID"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btresetID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btContadorID"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView"
        android:background="@android:color/darker_gray"
        android:text="resetar"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="332dp"/>

    <Button
        android:id="@+id/btContadorID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="65dp"
        android:background="@color/colorPrimary"
        android:text="@string/botao_mais_um"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="332dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vezes"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/tvContID"
        android:layout_alignRight="@+id/tvContID"
        android:layout_alignEnd="@+id/tvContID"/>

</RelativeLayout>
